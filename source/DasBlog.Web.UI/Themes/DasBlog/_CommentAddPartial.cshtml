@model DasBlog.Web.Models.BlogViewModels.AddCommentViewModel
@using DasBlog.Web.Models.BlogViewModels

<div class="post-new-comment">
    <form asp-controller="post" asp-action="edit" method="post">
        <div class="modal-body form-horizontal">
            <div class="form-group">
                <label asp-for="Name" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    @Html.EditorFor(x => x.Name)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    @Html.EditorFor(x => x.Email)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="HomePage" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    @Html.EditorFor(x => x.HomePage)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    @Html.EditorFor(x => x.Comment)
                </div>
            </div>
        </div>

        @Html.HiddenFor(m => m.TargetEntryId)
    </form>
</div>