            @Html.CheckBoxFor(m => @Model.SiteConfig.EnableAboutView, new { @class = "form-check-input" })
        </div>

        @Html.LabelFor(m => @Model.SiteConfig.EnableAboutView, null, new { @class = "form-check-label col-sm-10" })
    </div>
</div>