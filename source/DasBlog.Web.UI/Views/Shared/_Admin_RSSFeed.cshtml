    </div>
    @Html.ValidationMessageFor(m => m.SiteConfig.RssMainEntryCount, null, new { @class = "text-danger" })

</div>

<div class="form-group row mb-3">

    @Html.LabelFor(m => @Model.SiteConfig.RssEntryCount, null, new { @class = "col-form-label col-sm-2" })
